{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "lib": ["ES6", "ES2016", "ES2019", "ES2020", "ESNext"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@config": ["config/index"],
      "@shared/*": ["shared/*"]
    }
  },
  "exclude": ["**/*.js", "dist", "node_modules"],
  "include": ["src/**/*"]
}
