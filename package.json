{
  "name": "api-graphql",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "cross-env NODE_ENV=development tsnd -r tsconfig-paths/register --transpile-only --clear --ignore-watch {node_modules,__tests__} src/shared/infra/http/server.ts",
    "start": "cross-env NODE_ENV=production node dist/shared/infra/http/server.js",
    "prebuild": "yarn clean",
    "build": "ttsc",
    "typeorm": "tsnd -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles",
    "test:watch": "yarn test --watchAll",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write ."
  },
  "dependencies": {
    "apollo-server": "^2.19.2",
    "apollo-server-testing": "^2.19.2",
    "graphql": "^15.4.0",
    "jsonwebtoken": "^8.5.1",
    "merge-graphql-schemas": "^1.7.8",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@types/jest": "26.0.20",
    "@types/jsonwebtoken": "8.5.0",
    "@types/node": "14.14.21",
    "@zerollup/ts-transform-paths": "1.7.18",
    "cross-env": "7.0.3",
    "dotenv": "8.2.0",
    "eslint": "7.18.0",
    "jest": "26.6.3",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "ts-jest": "26.4.4",
    "ts-node-dev": "1.1.1",
    "tsconfig-paths": "3.9.0",
    "ttypescript": "1.5.12",
    "typescript": "4.1.3"
  }
}
